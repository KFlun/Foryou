<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:id="@+id/time_table"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/zdy_2"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Timetable"
        android:textSize="35sp" />

    <Button
        android:id="@+id/diarybook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_table"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/zdy_2"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Diarybook"
        android:textSize="35sp" />

    <Button
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diarybook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/zdy_2"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Search"
        android:textSize="35sp" />

    <Button
        android:id="@+id/setting"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/zdy_2"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Setting"
        android:textSize="35sp" />

    <Button
        android:id="@+id/important_day"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:text="important day"
        android:textSize="32dp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/zdy_1"/>

    <Button
        android:id="@+id/diary"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:text="diary"
        android:textSize="35dp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/zdy_1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_page3" />

</RelativeLayout>